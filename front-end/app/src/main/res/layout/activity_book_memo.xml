<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookMemoActivity">

    <ImageView
        android:id="@+id/ivBookCover"
        android:layout_width="102dp"
        android:layout_height="104dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvBookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="책이름"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivBookCover"
        app:layout_constraintTop_toTopOf="@+id/ivBookCover" />

    <Button
        android:id="@+id/btnCoverAdd"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:backgroundTint="#E3E3E3"
        android:backgroundTintMode="src_in"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="책표지추가"
        android:textColor="#2E2E2E"
        android:textSize="8sp"
        app:cornerRadius="3dp"
        app:layout_constraintEnd_toEndOf="@+id/ivBookCover"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="@+id/ivBookCover"
        tools:layout_editor_absoluteY="130dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMemoList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddMemo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMemoListHead" />

    <TextView
        android:id="@+id/tvMemoListHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="독서 메모"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/btnCoverAdd"
        app:layout_constraintTop_toBottomOf="@+id/line1" />

    <TextView
        android:id="@+id/tvProgressText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="68dp"
        android:text="진행률 : 100%"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvBookName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="별점 및 리뷰"
        app:layout_constraintStart_toStartOf="@+id/tvBookName"
        app:layout_constraintTop_toBottomOf="@+id/tvBookName" />

    <Button
        android:id="@+id/btnAddMemo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#5E5E5E"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="+"
        android:textSize="30dp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="@+id/rvMemoList"
        app:layout_constraintStart_toStartOf="@+id/btnCoverAdd"
        app:layout_constraintTop_toBottomOf="@+id/btnCoverAdd" />

    <TextView
        android:id="@+id/tvProgressText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="100 / 300"
        app:layout_constraintStart_toStartOf="@+id/tvProgressText1"
        app:layout_constraintTop_toBottomOf="@+id/tvProgressText1" />

    <Button
        android:id="@+id/btnProgressEdit"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:backgroundTint="#5E5E5E"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="수정"
        android:textSize="8sp"
        app:cornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvProgressText2"
        app:layout_constraintStart_toEndOf="@+id/tvProgressText2"
        app:layout_constraintTop_toTopOf="@+id/tvProgressText2" />

    <TextView
        android:id="@+id/tvProgressbarBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="#00BCD4"
        app:circularflow_defaultRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tvProgressText2"
        app:layout_constraintTop_toBottomOf="@+id/tvProgressText2" />

    <EditText
        android:id="@+id/etAddMemo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="메모작성"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btnAddMemo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>